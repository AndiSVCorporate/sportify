<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/lowestabsolutepage1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="10dp"
	xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
	android:id="@+id/trimpview"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="10"
	android:textSize="100sp"
	android:textColor="@color/black"
	android:layout_centerHorizontal="true"
	android:layout_alignParentTop="true" />

<TextView
	android:id="@+id/widget34"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="TRIMP"
	android:layout_below="@id/trimpview"
	android:layout_alignParentRight="true"
	android:layout_marginBottom="20dp"/>

<RelativeLayout
	android:id="@+id/widget40"
	android:layout_width="130dp"
	android:layout_height="75dp"
	android:background="@color/lightgray"
	android:layout_below="@id/widget34"
	android:layout_alignParentLeft="true" >
<TextView
	android:id="@+id/heartrateview"
	android:layout_width="70dp"
	android:layout_height="30dp"
	android:text="65"
	android:textSize="20sp"
	android:typeface="sans"
	android:textStyle="bold"
	android:textColor="#ff000000"
	android:gravity="center"
	android:layout_above="@+id/widget42"
	android:layout_alignParentRight="true" />
<TextView
	android:id="@+id/widget42"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="heart rate"
	android:textColor="#ff000000"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true" />
<ImageView
	android:id="@+id/widget41"
	android:src="@drawable/totalsteps"
	android:scaleType="fitCenter"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>
<RelativeLayout
	android:id="@+id/widget43"
	android:layout_width="130dp"
	android:layout_height="75dp"
	android:background="@color/lightgray"
	android:layout_alignParentRight="true"
	android:layout_alignBottom="@id/widget40">
<TextView
	android:id="@+id/speedlabel"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="speed (km/h)"
	android:textColor="#ff000000"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true" />
<TextView
	android:id="@+id/speedview"
	android:layout_width="70dp"
	android:layout_height="30dp"
	android:text="0"
	android:textSize="20sp"
	android:typeface="sans"
	android:textStyle="bold"
	android:textColor="#ff000000"
	android:gravity="center"
	android:layout_centerVertical="true"
	android:layout_toRightOf="@+id/widget44" />
<ImageView
	android:id="@+id/widget44"
	android:src="@drawable/stepstoday"
	android:scaleType="fitCenter"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>
<RelativeLayout
	android:id="@+id/widget47"
	android:layout_width="130dp"
	android:layout_height="75dp"
	android:layout_marginTop="10dp"
	android:background="@color/lightgray"
	android:layout_alignParentRight="true"
	android:layout_below="@id/widget43">
<TextView
	android:id="@+id/distanceview"
	android:layout_width="70dp"
	android:layout_height="30dp"
	android:text="0"
	android:textSize="20sp"
	android:typeface="sans"
	android:textStyle="bold"
	android:textColor="@color/black"
	android:gravity="center"
	android:layout_above="@+id/distancelabel"
	android:layout_alignParentRight="true" />
<TextView
	android:id="@+id/distancelabel"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="distance (m)"
	android:textColor="@color/black"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true" />
<ImageView
	android:id="@+id/widget48"
	android:src="@drawable/maxsteps"
	android:scaleType="fitCenter"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>
<RelativeLayout
	android:id="@+id/widget51"
	android:layout_width="130dp"
	android:layout_height="75dp"
	android:background="@color/lightgray"
	android:layout_below="@id/widget40"
	android:layout_marginTop="10dp"
	android:layout_alignParentLeft="true">
<TextView
	android:id="@+id/kcalview"
	android:layout_width="70dp"
	android:layout_height="30dp"
	android:text="0"
	android:textSize="20sp"
	android:typeface="sans"
	android:textStyle="bold"
	android:textColor="@color/black"
	android:gravity="center"
	android:layout_above="@+id/widget54"
	android:layout_toRightOf="@+id/widget52" />
<TextView
	android:id="@+id/widget54"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="kcal"
	android:textColor="#ff000000"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true" />
<ImageView
	android:id="@+id/widget52"
	android:src="@drawable/minsteps"
	android:scaleType="fitCenter"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>
<RelativeLayout
	android:id="@+id/widget55"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_alignParentLeft="true">
<Button
	android:id="@+id/startButton"
	android:text="Start"
	android:textSize="18sp"
	android:textStyle="bold"
	android:textColor="@color/black"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" />
<Button
	android:id="@+id/stopButton"
	android:text="Stop"
	android:textSize="18sp"
	android:textStyle="bold"
	android:textColor="@color/black"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:visibility="invisible" />
</RelativeLayout>
</RelativeLayout>
