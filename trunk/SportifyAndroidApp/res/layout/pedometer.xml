<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/lowestabsolutepage1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="10dp"
	xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
	android:id="@+id/stepstogoview"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="0"
	android:textSize="100sp"
	android:textColor="@color/black"
	android:layout_centerHorizontal="true"
	android:layout_alignParentTop="true" />

<TextView
	android:id="@+id/widget34"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="steps to go for today"
	android:layout_below="@id/stepstogoview"
	android:layout_alignParentRight="true"
	android:layout_marginBottom="20dp"/>

<RelativeLayout
	android:id="@+id/widget40"
	android:layout_width="130dp"
	android:layout_height="75dp"
	android:background="@color/lightgray"
	android:layout_below="@id/widget34"
	android:layout_alignParentLeft="true" >
<TextView
	android:id="@+id/totalstepsview"
	android:layout_width="70dp"
	android:layout_height="30dp"
	android:text="0"
	android:textSize="20sp"
	android:typeface="sans"
	android:textStyle="bold"
	android:textColor="#ff000000"
	android:gravity="center"
	android:layout_above="@+id/widget42"
	android:layout_alignParentRight="true" />
<TextView
	android:id="@+id/widget42"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text=" total steps"
	android:textColor="#ff000000"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true" />
<ImageView
	android:id="@+id/widget41"
	android:src="@drawable/totalsteps"
	android:scaleType="fitCenter"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>
<RelativeLayout
	android:id="@+id/widget43"
	android:layout_width="130dp"
	android:layout_height="75dp"
	android:background="@color/lightgray"
	android:layout_alignParentRight="true"
	android:layout_alignBottom="@id/widget40">
<TextView
	android:id="@+id/stepstodaylabel"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="steps today"
	android:textColor="#ff000000"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true" />
<TextView
	android:id="@+id/stepstodayview"
	android:layout_width="70dp"
	android:layout_height="30dp"
	android:text="0"
	android:textSize="20sp"
	android:typeface="sans"
	android:textStyle="bold"
	android:textColor="#ff000000"
	android:gravity="center"
	android:layout_centerVertical="true"
	android:layout_toRightOf="@+id/widget44" />
<ImageView
	android:id="@+id/widget44"
	android:src="@drawable/stepstoday"
	android:scaleType="fitCenter"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>
<RelativeLayout
	android:id="@+id/widget47"
	android:layout_width="130dp"
	android:layout_height="75dp"
	android:layout_marginTop="10dp"
	android:background="@color/lightgray"
	android:layout_alignParentRight="true"
	android:layout_below="@id/widget43">
<TextView
	android:id="@+id/maxstepsperdayview"
	android:layout_width="70dp"
	android:layout_height="30dp"
	android:text="0"
	android:textSize="20sp"
	android:typeface="sans"
	android:textStyle="bold"
	android:textColor="@color/black"
	android:gravity="center"
	android:layout_above="@+id/widget50"
	android:layout_alignParentRight="true" />
<TextView
	android:id="@+id/widget50"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="empty field"
	android:textColor="@color/black"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true" />
<ImageView
	android:id="@+id/widget48"
	android:src="@drawable/maxsteps"
	android:scaleType="fitCenter"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>
<RelativeLayout
	android:id="@+id/widget51"
	android:layout_width="130dp"
	android:layout_height="75dp"
	android:background="@color/lightgray"
	android:layout_below="@id/widget40"
	android:layout_marginTop="10dp"
	android:layout_alignParentLeft="true">
<TextView
	android:id="@+id/minstepsperdayview"
	android:layout_width="70dp"
	android:layout_height="30dp"
	android:text="0"
	android:textSize="20sp"
	android:typeface="sans"
	android:textStyle="bold"
	android:textColor="@color/black"
	android:gravity="center"
	android:layout_above="@+id/widget54"
	android:layout_toRightOf="@+id/widget52" />
<TextView
	android:id="@+id/widget54"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="empty field"
	android:textColor="#ff000000"
	android:layout_alignParentBottom="true"
	android:layout_alignParentRight="true" />
<ImageView
	android:id="@+id/widget52"
	android:src="@drawable/minsteps"
	android:scaleType="fitCenter"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>
<RelativeLayout
	android:id="@+id/widget55"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@color/lightgray"
	android:layout_alignParentBottom="true"
	android:layout_alignParentLeft="true">
<Button
	android:id="@+id/widget56"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Upload to server"
	android:textSize="18sp"
	android:textStyle="bold"
	android:textColor="@color/black"
	android:layout_centerVertical="true"
	android:layout_centerHorizontal="true" />
</RelativeLayout>
</RelativeLayout>
